<assembly>
    <id>assembly</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>${assembly.include.base.directory}</includeBaseDirectory>

    <fileSets>

        <!-- Scripts -->
        <fileSet>
            <directory>${basedir}/../../bin</directory>
            <includes>
                <include>*.sh</include>
            </includes>
            <fileMode>700</fileMode>
            <outputDirectory>/bin</outputDirectory>
        </fileSet>

        <!-- main jar -->
        <fileSet>
            <directory>${basedir}/${project.build.directory}</directory>
            <includes>
                <include>${project.build.finalName}.${project.packaging}</include>
            </includes>
            <outputDirectory>/jar</outputDirectory>
        </fileSet>

        <!-- tools jar -->
        <fileSet>
            <directory>${basedir}/../tools/target</directory>
            <includes>
                <include>tools-*.jar</include>
            </includes>
            <outputDirectory>/tool</outputDirectory>
        </fileSet>

        <!-- resources -->
        <fileSet>
            <directory>${basedir}/${project.build.directory}/classes/config</directory>
            <includes>
                <include>*.yaml</include>
                <include>*.yml</include>
                <include>*.xml</include>
                <include>*.properties</include>
            </includes>
            <fileMode>600</fileMode>
            <outputDirectory>/config</outputDirectory>
        </fileSet>

        <fileSet>
            <directory>${basedir}/${project.build.directory}/classes/</directory>
            <includes>
                <include>*.sql</include>
            </includes>
            <fileMode>600</fileMode>
            <outputDirectory>/sql</outputDirectory>
        </fileSet>

        <!-- Templates -->
        <fileSet>
            <directory>${basedir}/${project.build.directory}/classes/template</directory>
            <includes>
                <include>*.code</include>
            </includes>
            <fileMode>600</fileMode>
            <outputDirectory>/template</outputDirectory>
        </fileSet>

    </fileSets>

    <dependencySets>
        <dependencySet>
            <scope>runtime</scope>
            <excludes>
                <exclude>${groupId}:${artifactId}</exclude>
            </excludes>
            <outputDirectory>/lib</outputDirectory>
        </dependencySet>
    </dependencySets>
</assembly>
